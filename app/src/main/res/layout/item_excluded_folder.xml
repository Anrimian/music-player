<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <TextView
            style="@style/TextStyle.Medium"
            android:id="@+id/tv_folder_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/content_horizontal_margin"
            android:layout_marginTop="@dimen/content_internal_margin"
            android:layout_marginBottom="@dimen/content_internal_margin"
            android:layout_marginEnd="@dimen/content_internal_margin"
            android:layout_gravity="center_vertical"
            tools:text="ffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"/>

        <ImageView
            android:id="@+id/btn_remove"
            style="@style/ButtonStyle"
            android:layout_marginTop="@dimen/content_internal_margin"
            android:layout_marginBottom="@dimen/content_internal_margin"
            app:srcCompat="@drawable/ic_close"
            android:contentDescription="@string/remove_excluded_folder" />

    </LinearLayout>

    <View style="@style/Divider.Horizontal"/>

</LinearLayout>