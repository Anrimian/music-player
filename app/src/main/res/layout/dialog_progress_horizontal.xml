<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dialog_content_margin_start_text"
    android:paddingEnd="@dimen/dialog_content_margin_start_text"
    android:paddingTop="@dimen/content_vertical_margin"
    android:paddingBottom="@dimen/content_vertical_margin">

    <TextView
        style="@style/TextStyleContentSubtitle.Medium"
        android:id="@+id/tvProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        tools:text="Loading"/>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:indicatorColor="?attr/colorAccent"
        app:trackThickness="@dimen/seekbar_height"
        app:trackCornerRadius="@dimen/seekbar_corner_radius"/>

    <TextView
        android:id="@+id/tvError"
        style="@style/TextStyle.Error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="test error"/>

    <TextView
        android:id="@+id/btnTryAgain"
        style="@style/ButtonOutlineStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_spacing_margin"
        android:text="@string/try_again"/>

</LinearLayout>