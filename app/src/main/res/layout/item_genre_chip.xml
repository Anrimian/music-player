<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/chip_container"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/chip_height"
        android:background="@drawable/bg_chip"
        android:layout_marginEnd="@dimen/chip_spacing_margin"
        android:layout_marginBottom="@dimen/chip_spacing_margin">

        <TextView
            android:id="@+id/tv_genre"
            style="@style/TextStyle.Chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/chip_horizontal_margin"
            tools:text="sdsdsssdsdssdsdsdsdsdsssdsdssdsdsddsdsdssdsdsddsdsdssdsdsdddsdsdddsdsdssdsdsddsdsdssdsdsdddsdsdd"/>

        <ImageView
            android:id="@+id/iv_remove"
            android:layout_width="@dimen/chip_button_width"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:contentDescription="@string/remove_genre"
            android:background="@drawable/bg_selectable_circle"
            app:tint="?android:attr/textColorPrimary"
            app:srcCompat="@drawable/ic_close_circle" />

    </LinearLayout>

</FrameLayout>
