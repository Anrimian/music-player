<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseCheckboxStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:paddingTop">@dimen/checkbox_text_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/checkbox_text_vertical_padding</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="CheckboxStyle" parent="@style/BaseCheckboxStyle">
        <item name="android:paddingStart">24dp</item>
        <item name="android:textSize">@dimen/text_size_small_2</item>
    </style>

    <style name="SwitchViewStyle">
        <item name="android:textSize">@dimen/text_size_small_2</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="SeekBarStyle" parent="@style/Widget.AppCompat.SeekBar"/>

    <style name="VerticalSeekbarStyle" parent="SeekBarStyle">
        <!--wrap_content for api 21 - fixes thumb position-->
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SliderStyle">
        <item name="colorOnBackground">#fff</item>
        <item name="colorSurface">#fff</item>
        <item name="colorPrimary">?attr/colorAccent</item>

        <item name="labelBehavior">gone</item>
        <item name="labelStyle">@style/SliderStyle</item>
        <item name="trackHeight">2dp</item>
        <item name="thumbRadius">6dp</item>
        <item name="haloRadius">15dp</item>
        <item name="tickColorActive">@android:color/white</item>
        <item name="tickColorInactive">?attr/colorAccent</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:editTextColor">@color/color_text_primary</item>
    </style>

    <style name="TimeEditText" parent="@style/TextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_time_field</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:textSelectHandleLeft">@drawable/bg_empty</item>
        <item name="android:textSelectHandleRight">@drawable/bg_empty</item>
        <item name="android:textSelectHandle">@drawable/bg_empty</item>
    </style>

    <style name="TimeDividerTextStyle" parent="@style/TextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">:</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ChangeSpeedButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:scaleType">center</item>
        <item name="tint">@color/color_accent_state</item>
    </style>

</resources>