<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppWidget.Text" parent="Widget.AppCompat.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppWidget.Text.Primary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppWidget.Text.Primary.Medium">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppWidget.Text.Secondary">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="AppWidget.Text.Secondary.Medium">
        <item name="android:maxLines">3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppWidget_ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/color_remote_button</item>
        <item name="android:gravity">bottom</item>
        <item name="android:padding">4dp</item>
        <!--app widget button is disabled by default, will be enabled after widget provider call-->
        <item name="android:enabled">false</item>
    </style>

    <style name="WidgetImageStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

</resources>