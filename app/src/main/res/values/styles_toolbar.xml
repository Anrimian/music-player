<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.Button" parent="AppTheme">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?actionBarItemBackground</item>
    </style>

    <style name="Toolbar.Button.Overflow" parent="AppTheme">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?actionBarItemBackground</item>
    </style>

    <style name="ToolbarStyle">
        <item name="colorControlNormal">?attr/toolbarTextColorPrimary</item>
        <item name="android:editTextColor">?attr/toolbarTextColorPrimary</item>
        <item name="editTextColor">?attr/toolbarTextColorPrimary</item>
    </style>

    <style name="ToolbarStyle.Selection">
        <item name="colorControlNormal">?android:attr/textColorPrimary</item>
        <item name="android:editTextColor">?android:attr/textColorPrimary</item>
        <item name="editTextColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="SelectionOverflowButtonStyle">
        <item name="android:tint">?attr/actionModeTextColor</item>
    </style>

    <style name="ToolbarTitleStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">?attr/toolbarTextColorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="ToolbarTitleStyle.Selection">
        <item name="android:textColor">?attr/actionModeTextColor</item>
    </style>

    <style name="ToolbarTitleStyle.Reversed">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="ToolbarSubtitleStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="ToolbarTextStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
</resources>