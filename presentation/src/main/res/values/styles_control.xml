<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseCheckboxStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="CheckboxStyle" parent="@style/BaseCheckboxStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:textSize">@dimen/text_size_small_2</item>
        <item name="android:textColor">@color/color_text_primary</item>
    </style>

    <style name="SeekBarStyle" parent="@style/Widget.AppCompat.SeekBar"/>

    <style name="DiscreteSliderStyle">
        <item name="colorOnBackground">#fff</item>
        <item name="colorSurface">#fff</item>
        <item name="colorPrimary">?attr/colorAccent</item>

        <item name="labelBehavior">gone</item>
        <item name="labelStyle">@style/DiscreteSliderStyle</item>
        <item name="trackHeight">2dp</item>
        <item name="thumbRadius">6dp</item>
        <item name="haloRadius">15dp</item>
        <item name="tickColorActive">@android:color/white</item>
        <item name="tickColorInactive">?attr/colorAccent</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:editTextColor">@color/color_text_primary</item>
    </style>

</resources>