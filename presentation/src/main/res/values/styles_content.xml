<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Content.Button" parent="AppTheme">
        <item name="android:layout_width">@dimen/button_expand_size</item>
        <item name="android:layout_height">@dimen/button_expand_size</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:tint">@color/primary_button_color</item>
    </style>

    <style name="Content.Button.Main">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">@dimen/bottom_sheet_height</item>
        <item name="android:background">@drawable/bg_selectable_round_shape</item>
    </style>

    <style name="Content.Button.Menu">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:tint">@color/secondary_button_color</item>
    </style>

    <style name="Content.Text" parent="@style/Base.TextAppearance.AppCompat.Body1">

    </style>

    <style name="Content.Dialog.Text" parent="@style/Content.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Content.SecondaryText" parent="@style/Base.TextAppearance.AppCompat.Caption">

    </style>

    <style name="Content.SecondaryText.Small">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Content.Text.Time">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Content.Text.Subtitle" parent="Content.Text">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Content.Text.Subtitle.Small">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Content.Text.Small">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Content.Text.Medium">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Content.Button.Main.Expanded">
        <item name="android:layout_width">@dimen/play_button_expand_size</item>
        <item name="android:layout_height">@dimen/play_button_expand_size</item>
    </style>

    <style name="Content.Image" parent="AppTheme">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="Content.Image.Small" parent="Content.Image">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="Content.Text.Error">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Content.Text.Progress">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>