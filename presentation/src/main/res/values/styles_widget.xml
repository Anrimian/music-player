<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppWidget.Text" parent="Widget.AppCompat.TextView">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppWidget.Text.Primary">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="AppWidget.Text.Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="AppWidget_ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@color/color_button</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>