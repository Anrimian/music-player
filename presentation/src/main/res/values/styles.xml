<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Drawer" parent="AppTheme">

    </style>

    <style name="Toolbar.Button" parent="AppTheme">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">?actionBarItemBackground</item>
    </style>

    <style name="Content.Button.Main" parent="AppTheme">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="Content.Image" parent="AppTheme">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ToolbarStyle" parent="AppTheme">
        <item name="colorControlNormal">?android:attr/textColorPrimaryInverse</item>
        <item name="android:editTextColor">?android:attr/textColorPrimaryInverse</item>
        <item name="editTextColor">?android:attr/textColorPrimaryInverse</item>
    </style>

</resources>
