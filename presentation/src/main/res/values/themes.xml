        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="PrimaryDarkTheme" parent="PrimaryLightTheme">
        <!--primary colors-->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="colorPrimaryDarkSecondary">@color/darkColorPrimaryDark</item>
        <item name="actionModeTextColor">@color/primary_button_color_dark</item>

        <!--background-->
        <item name="android:windowBackground">@color/dark_background_level_1</item>
        <item name="android:colorBackground">@color/dark_background_level_1</item>
        <item name="listBackground">@color/dark_background_level_0</item>
        <item name="listItemBackground">@color/dark_background_level_1</item>
        <item name="menuItemBackground">@color/menu_item_background_color_dark</item>
        <item name="playerPanelBackground">?attr/colorPrimary</item>

        <!--text-->
        <item name="android:textColorPrimary">@color/text_color_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_color_secondary_dark</item>
        <item name="dialogTitleColor">@color/text_color_primary_dark</item>
        <item name="brightButtonColor">@color/colorAccentDark</item>

        <!--controls-->
        <item name="buttonColor">@color/primary_button_color_dark</item>
        <item name="secondaryButtonColor">@color/secondary_button_color_dark</item>
        <item name="colorControlHighlight">@color/color_control_highlight_dark</item>
        <item name="buttonColorInverse">@color/primary_button_color_dark</item>

        <!--navigation view-->
        <item name="navigationViewPrimaryColor">?android:attr/textColorPrimary</item>

        <!--toolbar-->
        <item name="actionModeStatusBarColor">@color/actionModeStatusBarColorDark</item>
        <item name="actionModeBackgroundColor">@color/actionModeBackgroundColorDark</item>

        <!--other-->
        <item name="android:alertDialogTheme">@style/DarkDialogStyle</item>

    </style>

    <style name="PrimaryTestTheme" parent="PrimaryLightTheme">
        <item name="colorPrimary">@color/secondColorPrimary</item>
        <item name="colorPrimaryDark">@color/secondColorPrimaryDark</item>
        <item name="colorAccent">@color/secondColorAccent</item>

        <!--<item name="listBackground">@color/back_two</item>-->
        <!--<item name="listItemBackground">@color/back_three</item>-->
    </style>

