<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryLightTheme" parent="AppTheme.VersionSpecific">
    </style>

    <style name="PrimaryDarkTheme" parent="AppTheme.VersionSpecific">
        <!--primary colors-->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="colorPrimaryDarkSecondary">@color/darkColorPrimaryDarkSecondary</item>
        <item name="actionModeTextColor">@color/primary_button_color_dark</item>
        <item name="colorPrimaryVariant">@color/darkColorPrimaryVariant</item>

        <!--background-->
        <!--<item name="android:windowBackground">@color/dark_background_level_1</item>-->
        <item name="android:colorBackground">@color/dark_background_level_1</item>
        <item name="listBackground">@color/dark_background_level_0</item>
        <item name="listItemBottomBackground">@color/dark_background_level_0</item>
        <item name="listItemBackground">@color/dark_background_level_1</item>
        <item name="popupMenuBackgroundColor">@color/popup_menu_background_color_dark</item>
        <item name="dialogBackground">@color/dialog_background_color_dark</item>
        <item name="playerPanelBackground">?attr/colorPrimary</item>
        <item name="subToolbarBackground">@color/dark_background_level_2</item>
        <item name="snackbarBackground">@color/snackbar_color_dark</item>

        <!--text-->
        <item name="android:textColorPrimary">@color/text_color_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_color_secondary_dark</item>
        <item name="android:textColorPrimaryInverse">@color/text_color_primary</item>
        <item name="android:textColorSecondaryInverse">@color/text_color_secondary_dark</item>
        <item name="dialogTitleColor">@color/text_color_primary_dark</item>
        <item name="textColorDisabled">@color/text_color_disabled_dark</item>
        <item name="brightButtonColor">@color/colorAccentDark</item>
        <item name="colorError">@color/color_error_dark</item>
        <item name="dialogButtonColor">@color/colorAccentDark</item>

        <!--controls-->
        <item name="buttonColor">@color/primary_button_color_dark</item>
        <item name="secondaryButtonColor">@color/secondary_button_color_dark</item>
        <item name="colorControlHighlight">@color/color_control_highlight_dark</item>
        <item name="buttonColorInverse">@color/primary_button_color_dark</item>
        <item name="colorControlHighlightInverse">@color/color_control_highlight_light</item>
        <item name="colorControlThird">@color/dialog_background_color_dark</item>

        <!--navigation view-->
        <item name="navigationViewPrimaryColor">?android:attr/textColorPrimary</item>

        <!--toolbar-->
        <item name="actionModeStatusBarColor">@color/actionModeStatusBarColorDark</item>
        <item name="actionModeBackgroundColor">@color/actionModeBackgroundColorDark</item>

        <!--other-->

    </style>

    <style name="PrimaryBlueTheme" parent="PrimaryLightTheme">
        <item name="colorPrimary">@color/colorBluePrimary</item>
        <item name="colorPrimaryDark">@color/colorBluePrimaryDark</item>
        <item name="colorAccent">@color/colorGreenAccent</item>

        <!--text-->
        <item name="dialogButtonColor">@color/colorGreenAccent</item>

        <!--navigation view-->
        <item name="navigationViewPrimaryColor">@color/colorBluePrimary</item>
    </style>

    <style name="PrimaryTealTheme" parent="PrimaryLightTheme">
        <item name="colorPrimary">@color/colorTealPrimary</item>
        <item name="colorPrimaryDark">@color/colorTealPrimaryDark</item>
        <item name="colorAccent">@color/colorPinkAccent</item>

        <!--text-->
        <item name="dialogButtonColor">@color/colorPinkAccent</item>

        <!--navigation view-->
        <item name="navigationViewPrimaryColor">@color/colorTealPrimary</item>
    </style>

</resources>