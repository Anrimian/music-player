<?xml version="1.0" encoding="utf-8"?>
<com.github.anrimian.musicplayer.ui.common.toolbar.AdvancedToolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    app:theme="@style/ToolbarStyle">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_internal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="?android:attr/textColorPrimaryInverse"
        app:subtitleTextColor="?android:attr/textColorSecondaryInverse"
        tools:navigationIcon="@drawable/ic_menu"
        tools:menu="@menu/library_compositions_menu"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="72dp">

        <FrameLayout
            android:id="@+id/toolbar_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/title_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="48dp">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/ToolbarTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_subtitle"
                    tools:text="fflafff"/>

                <TextView
                    android:id="@+id/tv_subtitle"
                    style="@style/ToolbarSubtitleStyle"
                    android:textColor="?android:attr/textColorSecondaryInverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintLeft_toLeftOf="@id/tv_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="dd"/>

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/titles_barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="right"
                    app:constraint_referenced_ids="tv_title, tv_subtitle"/>

                <View
                    android:id="@+id/action_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/ic_triangle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/titles_barrier"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.6" />

                <FrameLayout
                    android:id="@+id/fl_title_area"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="?selectableItemBackgroundBorderless"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/action_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/search"
                android:layout_marginEnd="16dp"
                android:inputType="text"
                android:imeOptions="actionSearch|flagNoExtractUi"
                android:importantForAutofill="no"
                android:background="@android:color/transparent"
                android:textColorHint="?android:attr/textColorSecondaryInverse"
                android:maxLines="1"
                tools:ignore="UnusedAttribute" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/selection_mode_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_selection_count"
                    style="@style/ToolbarTitleStyle.Selection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/acv_selection"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="23" />

                <androidx.appcompat.widget.ActionMenuView
                    android:id="@+id/acv_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/play_queue_title_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_queue_title"
                style="@style/ToolbarTitleStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/play_queue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_queue_subtitle"
                app:layout_constraintEnd_toStartOf="@id/acv_play_queue"
                tools:text="fflafff"/>

            <TextView
                android:id="@+id/tv_queue_subtitle"
                style="@style/ToolbarSubtitleStyle"
                android:textColor="?android:attr/textColorSecondaryInverse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_queue_title"
                app:layout_constraintStart_toStartOf="@id/tv_queue_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/acv_play_queue"
                tools:text="dd"/>

            <androidx.appcompat.widget.ActionMenuView
                android:id="@+id/acv_play_queue"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:theme="@style/ToolbarStyle"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</com.github.anrimian.musicplayer.ui.common.toolbar.AdvancedToolbar>