<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:paddingLeft="@dimen/dialog_margin_content_horizontal"
    android:paddingRight="@dimen/dialog_margin_content_horizontal"
    android:paddingTop="@dimen/dialog_margin_content_vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <RadioButton
        android:id="@+id/rb_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_marginLeft="@dimen/dialog_margin_content_horizontal"
        android:layout_marginRight="@dimen/dialog_margin_content_horizontal"
        android:layout_marginTop="@dimen/dialog_margin_content_vertical"
        android:layout_marginBottom="@dimen/dialog_margin_content_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="fffff" />

</FrameLayout>