<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinator"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/partial_toolbar"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="com.github.anrimian.simplemusicplayer.utils.views.coordinator.HidingViewWithBottomSheetBehavior"/>

            <FrameLayout
                android:id="@+id/drawer_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/bottom_sheet_height"
                app:layout_anchor="@id/toolbar"
                app:layout_behavior="com.github.anrimian.simplemusicplayer.utils.views.coordinator.LinkedCoordinateViewBehavior"/>

            <View
                android:id="@+id/bottom_sheet_top_shadow"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@drawable/bg_shadow_top"
                app:layout_anchor="@id/bottom_sheet"/>

            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/windowBackground"
                app:behavior_hideable="false"
                app:behavior_peekHeight="@dimen/bottom_sheet_height"
                app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

                <include layout="@layout/partial_detailed_music"
                    app:layout_behavior="android.support.design.widget.NestedScrollingBehavior"/>

            </android.support.design.widget.CoordinatorLayout>
        </android.support.design.widget.CoordinatorLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/drawer_menu"/>

    </android.support.v4.widget.DrawerLayout>

</android.support.design.widget.CoordinatorLayout>